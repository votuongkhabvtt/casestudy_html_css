    <!-- Notification -->
    <div class="notification" id="notification"></div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Sidebar toggle
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            
            sidebarToggle.addEventListener('click', function() {
                sidebar.classList.toggle('show');
            });
            
            // Menu navigation
            const menuItems = document.querySelectorAll('.menu-item[data-section]');
            const contentSections = document.querySelectorAll('.content-section');
            
            menuItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Remove active class from all menu items and content sections
                    menuItems.forEach(i => i.classList.remove('active'));
                    contentSections.forEach(s => s.classList.remove('active'));
                    
                    // Add active class to clicked menu item
                    this.classList.add('active');
                    
                    // Show corresponding content section
                    const sectionId = this.getAttribute('data-section');
                    document.getElementById(sectionId).classList.add('active');
                    
                    // Update header title
                    const sectionTitle = document.querySelector('#' + sectionId + ' .section-title');
                    if (sectionTitle) {
                        document.querySelector('.header h1').textContent = sectionTitle.textContent;
                    }
                });
            });
            
            // Submenu toggle
            const inventoryMenu = document.getElementById('inventoryMenu');
            const inventorySubmenu = document.getElementById('inventorySubmenu');
            const priceMenu = document.getElementById('priceMenu');
            const priceSubmenu = document.getElementById('priceSubmenu');
            const reportMenu = document.getElementById('reportMenu');
            const reportSubmenu = document.getElementById('reportSubmenu');
            
            inventoryMenu.addEventListener('click', function(e) {
                e.preventDefault();
                inventorySubmenu.classList.toggle('show');
            });
            
            priceMenu.addEventListener('click', function(e) {
                e.preventDefault();
                priceSubmenu.classList.toggle('show');
            });
            
            reportMenu.addEventListener('click', function(e) {
                e.preventDefault();
                reportSubmenu.classList.toggle('show');
            });
            
            // Modal handling
            const modals = document.querySelectorAll('.modal');
            const modalCloseButtons = document.querySelectorAll('.modal-close');
            
            modalCloseButtons.forEach(button => {
                button.addEventListener('click', function() {
                    this.closest('.modal').classList.remove('show');
                });
            });
            
            // Add import modal
            const addImportBtn = document.getElementById('addImportBtn');
            const importModal = document.getElementById('importModal');
            const cancelImportBtn = document.getElementById('cancelImportBtn');
            const saveImportBtn = document.getElementById('saveImportBtn');
            const addImportProductBtn = document.getElementById('addImportProductBtn');
            
            addImportBtn.addEventListener('click', function() {
                importModal.classList.add('show');
            });
            
            cancelImportBtn.addEventListener('click', function() {
                importModal.classList.remove('show');
            });
            
            saveImportBtn.addEventListener('click', function() {
                // Save import logic here
                showNotification('Lưu phiếu nhập thành công!', 'success');
                importModal.classList.remove('show');
            });
            
            addImportProductBtn.addEventListener('click', function() {
                const importProducts = document.getElementById('importProducts');
                const newRow = document.createElement('tr');
                newRow.innerHTML = `
                    <td>
                        <select class="form-control">
                            <option>Thuốc giảm đau</option>
                            <option>Vitamin tổng hợp</option>
                            <option>Tắm cho trẻ em</option>
                            <option>Tinh dầu bạc hà</option>
                        </select>
                    </td>
                    <td><input type="number" class="form-control" value="1"></td>
                    <td><input type="number" class="form-control" value="100000"></td>
                    <td>100.000 VNĐ</td>
                    <td><button class="btn btn-sm btn-delete"><i class="fas fa-trash"></i></button></td>
                `;
                importProducts.appendChild(newRow);
                
                // Add event listener to delete button
                newRow.querySelector('.btn-delete').addEventListener('click', function() {
                    newRow.remove();
                });
            });
            
            // Add export modal
            const addExportBtn = document.getElementById('addExportBtn');
            const exportModal = document.getElementById('exportModal');
            const cancelExportBtn = document.getElementById('cancelExportBtn');
            const saveExportBtn = document.getElementById('saveExportBtn');
            const addExportProductBtn = document.getElementById('addExportProductBtn');
            
            addExportBtn.addEventListener('click', function() {
                exportModal.classList.add('show');
            });
            
            cancelExportBtn.addEventListener('click', function() {
                exportModal.classList.remove('show');
            });
            
            saveExportBtn.addEventListener('click', function() {
                // Save export logic here
                showNotification('Lưu phiếu xuất thành công!', 'success');
                exportModal.classList.remove('show');
            });
            
            addExportProductBtn.addEventListener('click', function() {
                const exportProducts = document.getElementById('exportProducts');
                const newRow = document.createElement('tr');
                newRow.innerHTML = `
                    <td>
                        <select class="form-control">
                            <option>Thuốc giảm đau</option>
                            <option>Vitamin tổng hợp</option>
                            <option>Tắm cho trẻ em</option>
                            <option>Tinh dầu bạc hà</option>
                        </select>
                    </td>
                    <td><input type="number" class="form-control" value="1"></td>
                    <td><input type="number" class="form-control" value="150000"></td>
                    <td>150.000 VNĐ</td>
                    <td><button class="btn btn-sm btn-delete"><i class="fas fa-trash"></i></button></td>
                `;
                exportProducts.appendChild(newRow);
                
                // Add event listener to delete button
                newRow.querySelector('.btn-delete').addEventListener('click', function() {
                    newRow.remove();
                });
            });
            
            // Export stock report
            const exportStockBtn = document.getElementById('exportStockBtn');
            exportStockBtn.addEventListener('click', function() {
                showNotification('Xuất báo cáo tồn kho thành công!', 'success');
            });
            
            // Generate inventory report
            const generateInventoryReportBtn = document.getElementById('generateInventoryReportBtn');
            generateInventoryReportBtn.addEventListener('click', function() {
                showNotification('Tạo báo cáo kho hàng thành công!', 'success');
                
                // Initialize chart if not already initialized
                if (!window.inventoryChart) {
                    const ctx = document.getElementById('inventoryChart').getContext('2d');
                    window.inventoryChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: ['Thuốc giảm đau', 'Vitamin tổng hợp', 'Tắm cho trẻ em', 'Tinh dầu bạc hà'],
                            datasets: [
                                {
                                    label: 'Tồn đầu kỳ',
                                    data: [30, 25, 20, 15],
                                    backgroundColor: 'rgba(52, 152, 219, 0.5)',
                                    borderColor: 'rgba(52, 152, 219, 1)',
                                    borderWidth: 1
                                },
                                {
                                    label: 'Nhập trong kỳ',
                                    data: [20, 15, 10, 10],
                                    backgroundColor: 'rgba(46, 204, 113, 0.5)',
                                    borderColor: 'rgba(46, 204, 113, 1)',
                                    borderWidth: 1
                                },
                                {
                                    label: 'Xuất trong kỳ',
                                    data: [5, 8, 2, 5],
                                    backgroundColor: 'rgba(243, 156, 18, 0.5)',
                                    borderColor: 'rgba(243, 156, 18, 1)',
                                    borderWidth: 1
                                },
                                {
                                    label: 'Tồn cuối kỳ',
                                    data: [45, 32, 28, 20],
                                    backgroundColor: 'rgba(231, 76, 60, 0.5)',
                                    borderColor: 'rgba(231, 76, 60, 1)',
                                    borderWidth: 1
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });
                }
            });
            
            // Generate finance report
            const generateFinanceReportBtn = document.getElementById('generateFinanceReportBtn');
            generateFinanceReportBtn.addEventListener('click', function() {
                showNotification('Tạo báo cáo thu chi thành công!', 'success');
                
                // Initialize chart if not already initialized
                if (!window.financeChart) {
                    const ctx = document.getElementById('financeChart').getContext('2d');
                    window.financeChart = new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: ['01/10', '05/10', '10/10', '15/10', '20/10', '25/10', '31/10'],
                            datasets: [
                                {
                                    label: 'Thu',
                                    data: [0, 0, 850000, 1200000, 0, 0, 0],
                                    backgroundColor: 'rgba(46, 204, 113, 0.2)',
                                    borderColor: 'rgba(46, 204, 113, 1)',
                                    borderWidth: 2,
                                    fill: true
                                },
                                {
                                    label: 'Chi',
                                    data: [0, 0, 3500000, 5000000, 0, 0, 0],
                                    backgroundColor: 'rgba(231, 76, 60, 0.2)',
                                    borderColor: 'rgba(231, 76, 60, 1)',
                                    borderWidth: 2,
                                    fill: true
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });
                }
            });
            
            // Save settings
            const saveSettingsBtn = document.getElementById('saveSettingsBtn');
            saveSettingsBtn.addEventListener('click', function() {
                showNotification('Lưu cài đặt thành công!', 'success');
            });
            
            // Logout
            const logoutBtn = document.getElementById('logoutBtn');
            logoutBtn.addEventListener('click', function(e) {
                e.preventDefault();
                if (confirm('Bạn có chắc chắn muốn đăng xuất?')) {
                    window.location.href = 'trangchu.html';
                }
            });
            
            // Notification function
            function showNotification(message, type) {
                const notification = document.getElementById('notification');
                notification.textContent = message;
                notification.className = 'notification ' + type + ' show';
                
                setTimeout(() => {
                    notification.classList.remove('show');
                }, 3000);
            }
            
            // Add event listeners to delete buttons in modals
            document.querySelectorAll('#importProducts .btn-delete, #exportProducts .btn-delete').forEach(button => {
                button.addEventListener('click', function() {
                    this.closest('tr').remove();
                });
            });
        });
    </script>
</body>
</html>
