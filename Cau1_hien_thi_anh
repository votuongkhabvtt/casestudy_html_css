    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    
    <!-- Custom Script -->
    <script>
        let currentScale = 1;
        const image = document.querySelector('.custom-image');
        const body = document.querySelector('body');
        const backgrounds = [
            'linear-gradient(135deg, #4e54c8 0%, #8f94fb 100%)',
            'linear-gradient(135deg, #ff7e5f 0%, #feb47b 100%)',
            'linear-gradient(135deg, #00cdac 0%, #02aab0 100%)',
            'linear-gradient(135deg, #6a11cb 0%, #2575fc 100%)',
            'linear-gradient(135deg, #ff6b6b 0%, #ff9e6b 100%)'
        ];
        let currentBg = 0;
        
        // Ẩn spinner khi ảnh tải xong
        function hideLoading() {
            document.getElementById('loading').style.display = 'none';
        }
        
        // Phóng to ảnh
        function zoomIn() {
            if (currentScale < 1.5) {
                currentScale += 0.1;
                image.style.transform = `scale(${currentScale})`;
            }
        }
        
        // Thu nhỏ ảnh
        function zoomOut() {
            if (currentScale > 0.5) {
                currentScale -= 0.1;
                image.style.transform = `scale(${currentScale})`;
            }
        }
        
        // Reset zoom về mặc định
        function resetZoom() {
            currentScale = 1;
            image.style.transform = 'scale(1)';
        }
        
        // Thay đổi màu nền
        function changeBackground() {
            currentBg = (currentBg + 1) % backgrounds.length;
            body.style.background = backgrounds[currentBg];
        }
        
        // Reset màu nền về mặc định
        function resetBackground() {
            currentBg = 0;
            body.style.background = backgrounds[0];
        }
        
        // Thay đổi theme
        function changeTheme(primary, secondary) {
            document.documentElement.style.setProperty('--primary-color', primary);
            document.documentElement.style.setProperty('--secondary-color', secondary);
            body.style.background = `linear-gradient(135deg, ${primary} 0%, ${secondary} 100%)`;
        }
        
        // Ẩn loading nếu ảnh tải xong, nếu quá 5 giây thì vẫn ẩn loading
        window.onload = function() {
            setTimeout(function() {
                document.getElementById('loading').style.display = 'none';
            }, 5000);
        };
    </script>
</body>
