    <script>
        let currentScale = 1;
        const image = document.querySelector('img');
        
        function hideLoading() {
            document.getElementById('loading').style.display = 'none';
        }
        
        function zoomIn() {
            currentScale += 0.1;
            image.style.transform = `scale(${currentScale})`;
        }
        
        function zoomOut() {
            if (currentScale > 0.2) {
                currentScale -= 0.1;
                image.style.transform = `scale(${currentScale})`;
            }
        }
        
        function resetZoom() {
            currentScale = 1;
            image.style.transform = 'scale(1)';
        }
        
        // Ẩn loading nếu ảnh tải xong, nếu quá 5 giây thì vẫn ẩn loading
        window.onload = function() {
            setTimeout(function() {
                document.getElementById('loading').style.display = 'none';
            }, 5000);
        };
    </script>
