    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const decreaseButtons = document.querySelectorAll('.decrease');
            const increaseButtons = document.querySelectorAll('.increase');
            const removeButtons = document.querySelectorAll('.remove-btn');
            const cartCount = document.querySelector('.cart-count');
            const subtotalElement = document.getElementById('subtotal');
            const totalElement = document.getElementById('total');
            const notification = document.getElementById('notification');
            
            // Update cart count
            function updateCartCount() {
                const cartItems = document.querySelectorAll('#cartItems tr');
                let count = 0;
                
                cartItems.forEach(item => {
                    const quantity = parseInt(item.querySelector('.quantity-input').value);
                    count += quantity;
                });
                
                cartCount.textContent = count;
            }
            
            // Update totals
            function updateTotals() {
                const cartItems = document.querySelectorAll('#cartItems tr');
                let subtotal = 0;
                
                cartItems.forEach(item => {
                    const priceText = item.querySelectorAll('td')[1].textContent;
                    const price = parseInt(priceText.replace(/[^\d]/g, ''));
                    const quantity = parseInt(item.querySelector('.quantity-input').value);
                    const itemTotal = price * quantity;
                    
                    item.querySelector('.item-total').textContent = itemTotal.toLocaleString('vi-VN') + ' VNĐ';
                    subtotal += itemTotal;
                });
                
                const shipping = 30000;
                const total = subtotal + shipping;
                
                subtotalElement.textContent = subtotal.toLocaleString('vi-VN') + ' VNĐ';
                totalElement.textContent = total.toLocaleString('vi-VN') + ' VNĐ';
            }
            
            // Decrease quantity
            decreaseButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const quantityInput = this.nextElementSibling;
                    let quantity = parseInt(quantityInput.value);
                    
                    if (quantity > 1) {
                        quantity--;
                        quantityInput.value = quantity;
                        updateTotals();
                        updateCartCount();
                    }
                });
            });
            
            // Increase quantity
            increaseButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const quantityInput = this.previousElementSibling;
                    let quantity = parseInt(quantityInput.value);
                    
                    quantity++;
                    quantityInput.value = quantity;
                    updateTotals();
                    updateCartCount();
                });
            });
            
            // Remove item
            removeButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const row = this.closest('tr');
                    row.remove();
                    updateTotals();
                    updateCartCount();
                    showNotification('Đã xóa sản phẩm khỏi giỏ hàng', 'success');
                    
                    // Check if cart is empty
                    const cartItems = document.querySelectorAll('#cartItems tr');
                    if (cartItems.length === 0) {
                        document.getElementById('cartContainer').innerHTML = `
                            <div class="empty-cart">
                                <i class="fas fa-shopping-cart"></i>
                                <h3>Giỏ hàng của bạn đang trống</h3>
                                <p>Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm</p>
                                <a href="trangchu.html" class="btn" style="margin-top: 20px;">Tiếp tục mua hàng</a>
                            </div>
                        `;
                    }
                });
            });
            
            function showNotification(message, type) {
                notification.textContent = message;
                notification.className = 'notification ' + type + ' show';
                
                setTimeout(() => {
                    notification.classList.remove('show');
                }, 3000);
            }
            
            // Initialize
            updateCartCount();
            updateTotals();
        });
    </script>
</body>
